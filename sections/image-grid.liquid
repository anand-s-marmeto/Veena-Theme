{%  style  %} 
.padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %} 

<div class="image-grid padding-{{ section.id }}">
  <div class="page-width">
    <div class="image-grid__container">
      {% for block in section.blocks %}
        {% if block.settings.desktop_image %}
          <div class="image-grid-{{ forloop.index }}">
            <div class="grid-image">
              {% render 'responsive-picture', class:"picture" , desktopImage: block.settings.desktop_image , mobileImage: block.settings.mobile_image %}
            </div>
            <div class="grid-item__text-content">
              {% if block.settings.sub_heading != blank %}
                <div class="grid-item__sub-heading">
                  <p>{{ block.settings.sub_heading }}</p>
                </div>
              {% endif %}
              {% if block.settings.heading != blank %}
                <h3 class="h2 grid-item__heading">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="grid-item__description">
                  {{ block.settings.description }}
                </div>
              {% endif %}
              {% if block.settings.button_link != blank and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="grid-item__button-{{ forloop.index }}"><span>{{ block.settings.button_text }}</span></a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


{%  schema  %} 
  {
    "name":"Image grid",
    "tag": "section",
    "settings": [
      {
            "type":"header",
            "content":"Section Padding"
            },
            {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding top",
            "default": 36
            },
            {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        }
    ],
    "blocks": [
      {
        "name": "Image block",
        "type": "image-grid",
        "settings": [
          {
            "type": "image_picker",
            "id": "desktop_image",
            "label":"Desktop image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label":"Mobile image"
          },
          {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub heading"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          },
          {
            "type":"url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Image grid"
      }
    ]
  }
{% endschema %} 