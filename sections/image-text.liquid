<link rel="stylesheet" href="{{ 'image-text.css' |  asset_url }}">

{%  style  %} 
.padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="image-text padding-{{ section.id }}">
  <div class="page-width">
    <div class="image-text__wrapper">
      <div class="image-text__image">
        {% if section.settings.desktop_image != blank %}
          {%  render 'responsive-picture', desktopImage: section.settings.desktop_image , mobileImage : section.settings.mobile_image %} 
        {% endif %}
      </div>
      <div class="image-text__text-container">
        {% if section.settings.caption != blank %}
          <div class="image-text__caption">
            {{ section.settings.caption }}
          </div>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h3 class="image-text__heading">
            {{ section.settings.heading }}
          </h3>
        {% endif %}
        {% if section.settings.description != blank %}
          <div class="text-image__description">
            {{ section.settings.description }}
          </div>
        {% endif %}
        {% if section.settings.button_link != blank and section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="text-image__button"><span>{{ section.settings.button_text }}</span></a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{%  schema  %} 
  {
    "name":"Image text",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Desktop image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile image"
      },
      {
        "type": "text",
        "id": "caption",
        "label": "Caption"
      },
      {
        "type":"text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "url",
        "id": "button_link",
        "label":"Button link"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
      "type": "header",
      "content":"Section padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "presets":[
      {
        "name": "Image text"
      }
    ]
  }

{% endschema %}