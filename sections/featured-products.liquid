<link rel="stylesheet" href="{{ 'featured-products.css' |  asset_url }}">

{%  style  %} 
.padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %} 

<div class="featured-products padding-{{ section.id }}">
  <div class="page-width">
    {% comment %} Header Section {% endcomment %}
    <div class="featured-products__header-section">
      {% if section.settings.heading != blank %}
        <div class="featured-products__heading">
          {{ section.settings.heading }}
        </div>
      {% endif %}
      {% if section.settings.button_url != blank and section.settings.button_text != blank %}
        <a href="{{ section.settings.button_url }}" class="featured-products__button">
          <span>{{ section.settings.button_text }}</span>
        </a>
      {% endif %}
    </div>

    {% comment %} Slider Section {% endcomment %}

    {% comment %} <div class="featured-products__slider">
      <div class="featured-products__slider-wrapper">
        <div class="splide" id="splide">
          <div class="splide__track">
            <div class="splide__list">
              {% for product in section.settings.product_list %}
                <div class="splide__slide">
                  <div class="product-card">
                    <div class="product-card-image media media--portrait">
                      <img src="{{ product.featured_image |  image_url  }}" alt="product-image"/>
                    </div>
                  </div>
                </div>
                {%  else %}
                {% for i in (1..4) %}
                  <div class="splide__slide">
                  {{ 'product-' | append: i | placeholder_svg_tag }}
                  </div>
                {% endfor %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div> {% endcomment %}

    <div class="featured-products__grid">
        <div class="grid grid--4-col-desktop grid--2-col-tablet grid--1-col">
          {% for product in section.settings.product_list %}
            <div class="grid__item">
              {%  render 'product-card' , product: product, section_id : section.id %}
            </div>
            {%  else  %}
            {% for i in (1..5) %}
            <div class="grid__item">
              <div class="media media--portrait">
                {{ 'product-' | append: i | placeholder_svg_tag }}
              </div>

            </div>
            {% endfor %}
          {% endfor %}
        </div>
    </div>
  </div>

</div>

{% comment %} <script>
  document.addEventListener('DOMContentLoaded', function(){
    new Splide( '#splide', {
      grid: {
        rows: 3,
        cols: 3
      },
      breakpoints: {
        800: {
          grid: {
            rows: 2,
            cols: 2
          },
        },
        600: {
          grid: false
        }
      }
    }).mount( window.splide.Extensions )

  })
 </script> {% endcomment %}


{% schema %} 
  {
    "name":"Featured products",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "checkbox",
        "id": "slider_checkbox",
        "label": "Slider checkbox",
        "info": "Check if you need a slider."
      },
      {
        "type": "header",
        "content":"Settings for featured image"
      },
      {
        "type": "checkbox",
        "id": "featured_checkbox",
        "label": "Featured checkbox",
        "info": "Check if you need a featured image for the section."
      },
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "product_list",
        "id": "product_list",
        "label":"Products",
        "info": "Enter the products for the grid/slider."
      },
      {
        "type": "header",
        "content":"Section padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }

    ],
    "presets": [
      {
        "name": "Featured products"
      }
    ]
  }

 {% endschema %}