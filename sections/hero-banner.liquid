{%  style  %} 
.padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %} 

{% capture slider %}
    {
        "perPage":1,
        "arrows":true,
        "pagination":true
    }
{% endcapture %}

<link rel="stylesheet" href="{{ 'hero-banner.css' | asset_url }}">

<div class="hero-banner padding-{{ section.id }}">
    <div class="page-width">
        <my-splide data-slider-options='{{ slider }}'>
            <div class="splide">
                <div class="splide__track">
                    <div class="splide__list">
                            {% for block in section.blocks %}
                                    <div class="splide__slide ">
                                        {% if block.settings.image_desktop != blank and block.settings.image_mobile != blank %}
                                            {%  render 'responsive-picture', class:'background-image', mobileImage: block.settings.image_mobile, desktopImage : block.settings.image_desktop %} 
                                        {% endif %}
                                        <div class="hero-banner__text-container {{ block.settings.content_alignment }}">
                                            <div class="hero-banner__text-content text-align-{{ block.settings.text_alignment }}">
                                                {% if block.settings.banner_tag!= blank %}
                                                    <ul class="tag">
                                                        <li> {{ block.settings.banner_tag }}</li>
                                                    </ul>
                                                {% endif %}

                                                {% if block.settings.banner_title != blank %}
                                                    <h1 class="hero-banner__title">{{ block.settings.banner_title }}</h1>
                                                {% endif %}
                                                {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                                                    <a class="hero-banner__button" href="{{ block.settings.button_link }}"><span> {{ block.settings.button_text }}</span> </a>
                                                    
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                            {% endfor %}
                        
                    </div>
                </div>
            </div>
            
        </my-splide>
    </div>
</div>


{%  schema  %} 
{
    "name":"Hero Banner",
    "tag": "section",
    "settings": [
        {
        "type": "header",
        "content": "Section padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "name": "Hero Blocks",
            "type": "product-content",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_desktop",
                    "label": "Image-Desktop"
                },
                {
                    "type": "image_picker",
                    "id": "image_mobile",
                    "label": "Image-Mobile"
                },
                {
                    "type":"text",
                    "id":"banner_tag",
                    "label": "Banner Tag"
                },
                {
                    "type": "text",
                    "id": "banner_title",
                    "label": "Banner Title"
                },
                {
                    "type": "url",
                    "id":"button_link",
                    "label": "Button Link"
                },
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button Text"
                },
                {
                    "type": "header",
                    "content":"Text Alignment settings"
                },
                {   
                    "type": "select",
                    "id": "content_alignment",
                    "label": "Content Alignment",
                    "options": [
                        {
                            "value": "top-left", "label":"Top left"
                        },
                        {
                            "value":"top-center", "label":"Top center"
                        },
                        {
                            "value": "top-right", "label":"Top right"
                        },
                        {
                            "value": "center-left", "label":"Center left"
                        },
                        {
                            "value": "center" , "label":"Center"
                        },
                        {
                            "value": "center-right","label":"Center right"
                        },
                        {
                            "value": "bottom-left", "label":"Bottom left"
                        },
                        {
                            "value": "bottom-center","label":"Bottom center"
                        },
                        {
                            "value": "bottom-right","label":"Bottom right"
                        }
                    ],
                    "default": "center"
                },
                {
                    "type": "select",
                    "id": "text_alignment",
                    "label": "Text Alignment",
                    "options": [
                        {
                            "value": "center", "label":"Center"
                        },
                        {
                            "value": "left","label":"Left"
                        },
                        {
                            "value":"right","label":"Right"
                        }
                    ],

                    "default": "center"
                }
            

            ]
        }
    ],
            "presets":[
                {
                    "name": "Hero Banner"
                }
            ]
}
{% endschema %} 