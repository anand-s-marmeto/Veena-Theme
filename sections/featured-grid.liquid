<link rel="stylesheet" href="{{ 'featured-grid.css' | asset_url }}">

{%  style  %} 
.padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %} 

<div class="featured-grid padding-{{section.id}}">
    <div class="page-width grid">
        {% for block in section.blocks %}
        <div class="grid__item">
            <div class="featured-grid__section">
                {% if block.settings.desktop_image != blank and block.settings.mobile_image!= blank %}
                    {%  render 'responsive-picture', class:'featured-grid__section-image' , desktopImage:block.settings.desktop_image, mobileImage: block.settings.mobile_image %}
                {% endif %}
                <div class="featured-grid-section__text-content">
                {% if block.settings.tag != blank %}
                    <ul class="tag">
                        <li>{{ block.settings.tag }}</li>
                    </ul>
                {% endif %}
                {% if block.settings.title != blank %}
                    <h3 class="featured-grid__section-title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.button_link !=blank and block.settings.button_text!= blank %}
                    <a class="featured-grid__button" href="{{ block.settings.button_link }}"><span>{{ block.settings.button_text }}</span> </a>
                {% endif %}
                </div>
            </div>
            
        </div>
        {% endfor %}
    </div>
</div>


{%  schema  %} 
    {
        "name":"Featured Grid",
        "tag": "section",
        "settings": [
            {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding top",
            "default": 36
            },
            {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
        }
        ],
        "blocks": [
            {
                "name": "Featured Block",
                "type": "featured-content",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "desktop_image",
                        "label": "Content Image for Desktop"
                    },
                    {
                        "type": "image_picker",
                        "id": "mobile_image",
                        "label": "Content Image for Mobile"
                    },
                    {
                        "type": "text",
                        "id": "tag",
                        "label": "Content Tag"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Content Title"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button Link"
                    },
                    {
                        "type": "text",
                        "id": "button_text",
                        "label": "Button Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Featured Grid"
            }
        ]
    }
{% endschema %}